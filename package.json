{
  "name": "rakun-js",
  "version": "1.2.0",
  "description": "Experimental js cli for managing my local development environment",
  "main": "src/index.mjs",
  "type": "module",
  "scripts": {
    "start": "zx ./src/index.mjs",
    "build": "esbuild src/index.mjs --bundle --platform=node --target=node16 --format=esm --outfile=dist/rakun.js"
  },
  "bin": {
    "rakun": "./dist/rakun.js"
  },
  "keywords": [],
  "author": "ndom91 <yo@ndo.dev>",
  "license": "MIT",
  "devDependencies": {
    "esbuild": "^0.14.47",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "lint-staged": "^13.0.2",
    "prettier": "^2.7.1",
    "simple-git-hooks": "^2.8.0"
  },
  "dependencies": {
    "zx": "^7.0.1"
  },
  "packageManager": "pnpm@7.5.1",
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error"
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "bracketSpacing": true,
    "arrowSpacing": true
  },
  "lint-staged": {
    "*.{js,jsx,mjs,ts,tsx,css,json}": [
      "prettier --write"
    ],
    "*.{js,jsx,mjs}": [
      "eslint --fix"
    ]
  }
}
