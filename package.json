{
  "name": "rakun-js",
  "version": "1.1.0",
  "description": "Experimental js cli for managing my local development environment",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "zx ./src/index.js",
    "build": "esbuild src/index.js --bundle --platform=node --target=node16 --format=esm --outfile=dist/rakun.js"
  },
  "bin": {
    "rakun": "./dist/rakun.js"
  },
  "keywords": [],
  "author": "ndom91 <yo@ndo.dev>",
  "license": "MIT",
  "devDependencies": {
    "esbuild": "^0.14.28",
    "lint-staged": "^12.3.7",
    "prettier": "^2.6.1",
    "simple-git-hooks": "^2.7.0"
  },
  "dependencies": {
    "zx": "^6.0.7"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,mjs,jsx,ts,tsx}": [
      "prettier --write"
    ]
  }
}
